main-color = #673AB7
main-color-lightest = #EDE7F6
main-color-light = #7E57C2

.header
  width 100%
  height 70px
  padding 0 16px
  position fixed
  top 0
  background-color main-color

.nav-main
.nav-auth
  height 100%
  display block
  padding 16px 0

.nav-main
  float left

.nav-auth
  float right

.nav-main__item
.nav-auth__item
  float left
  
.nav-main__item:not(:last-child)
.nav-auth__item:not(:last-child)
  border-right 1px solid main-color-lightest

.nav-main__item-link
.nav-auth__item-link
  display block
  color main-color-lightest
  text-align center
  padding 10px 16px

.nav-main__item-link--active
.nav-main__item-link:hover
.nav-auth__item-link--active
.nav-auth__item-link:hover  
  background-color main-color-light

.login-form
  background-color main-color-lightest
  padding 6px
  position absolute
  top 80px
  right 6px

.login-form:before
  content ''
  position absolute
  top -16px
  left 125px
  height 0
  width 0
  border-bottom 16px solid main-color-lightest
  border-left 16px solid transparent
  border-right 16px solid transparent
  z-index 1000

.wrapper
  margin-top 70px
  padding 6px
  